<div class="bg-gray-100 min-h-screen flex flex-col items-center p-4">
    <!-- Header -->
    <header class="w-full max-w-4xl">
        <h1 class="text-2xl font-bold text-gray-700 mb-4">Quản lý khách hàng</h1>
        <!-- Thanh tìm kiếm và nút thêm -->
        <form action="/admin/customer/search-customer" method="get" class="flex justify-between items-center mb-4">
            <input
            name="searchInput"
            type="text"
            placeholder="Tìm kiếm khách hàng..."
            class="w-3/4 p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300"
            />
            <button
            class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:ring focus:ring-blue-300"
            >
            Tìm kiếm
            </button>
        </form>
    </header>

    <!-- Bảng danh sách khách hàng -->
    <main class="w-full max-w-4xl bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full table-auto">
            <thead class="bg-gray-200">
            <tr>
                <th class="text-left py-2 px-4 text-gray-600">Họ và tên</th>
                <th class="text-left py-2 px-4 text-gray-600">Email</th>
                <th class="text-left py-2 px-4 text-gray-600">Trạng thái xác thực</th>
            </tr>
            </thead>
            <tbody>
                <% customers.forEach(cus => { %>
                    <tr class="border-t">
                        <td class="py-2 px-4"><%- cus.tenKhachHang %></td>
                        <td class="py-2 px-4"><%- cus.email %></td>
                        <td class="py-2 px-4">
                            <% if (cus.trangThaiXacThuc == false) { %>
                                <span class="bg-red-100 text-red-700 text-sm font-semibold px-2 py-1 rounded-lg">
                                    Chưa xác thực
                                </span>
                            <% } else { %>
                                <span class="bg-green-100 text-green-700 text-sm font-semibold px-2 py-1 rounded-lg">
                                    Xác thực
                                </span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</div>