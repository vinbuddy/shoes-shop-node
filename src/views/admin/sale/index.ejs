                                                    <% if (maxDiscount > 0) { %>
                                                        <label class="mt-3 badge badge-error text-white">
                                                            Giảm <%= maxDiscount %>%
                                                        </label>
                                                    <% } %>
                                                </div>
                                            </div>
                                            
