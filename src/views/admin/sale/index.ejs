                                        <p class="mt-1 text-lg font-medium text-primary">
                                            <%= formatVNCurrency(finalPrice || 0) %>
                                        </p>
                                        <p class="mt-1 text-gray-700 line-through">
                                            <%= formatVNCurrency(product.danhSachKichCo[0]?.giaKichCo || 0) %>
                                        </p>
    
                                    </div>
                                <% } else { %>
                                    <p class="mt-1 text-lg font-medium text-gray-900">
                                        <%= formatVNCurrency(product.danhSachKichCo[0]?.giaKichCo || 0) %>
                                    </p>
