                            Hủy lọc
                        </a>
                    </form>
                </div>
            </section>
    
            <!-- Products -->
            <section class="col-span-9">
                <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
                    <% if (products && products.length > 0) { %>
                        <% products.forEach(product => { %>
    
                            <% 
                                // Lấy khuyến mãi áp dụng cho sản phẩm
                                const applicablePromotions = promotions.filter(promo =>
                                    promo.danhSachSanPhamApDung.some(
                                        productId => productId.toString() === product.maSanPham.toString()
                                    )
                                );
    
                                // Lấy giá trị giảm cao nhất
                                const maxDiscount = applicablePromotions.length > 0 
                                    ? Math.max(...applicablePromotions.map(promo => promo.giaTriKhuyenMai)) 
                                    : 0;
    
                                // Tính giá sau khuyến mãi (nếu có)
                                const finalPrice = product.danhSachKichCo[0]?.giaKichCo 
                                    ? product.danhSachKichCo[0].giaKichCo * (1 - maxDiscount / 100) 
                                    : null;
                            %>
    
                            <label for="modal-<%= product.maSanPham %>" class="group cursor-pointer">
                                <div
                                    class="relative aspect-h-1 aspect-w-1 w-full min-h-[180px] max-h-[180px] overflow-hidden rounded-2xl xl:aspect-h-8 xl:aspect-w-7 border hover:border-primary"
                                >
                                    <img
                                        src="<%= product.hinhAnhDaiDien || "/images/no-result.png" %>"
                                        alt="<%= product.tenSanPham %>"
                                        class="h-full w-full object-cover object-center group-hover:opacity-75"
                                    />
    
                                    <% if (maxDiscount > 0) { %>
                                        <label class="absolute top-3 right-3 badge badge-error text-white">
                                            Giảm <%= maxDiscount %>%
                                        </label>
                                    <% } %>
                                </div>
                                <h3 class="mt-4 text-sm text-gray-700"><%= product.tenSanPham %></h3>
                                
