                                        <input
                                            id="price-from"
                                            type="text"
                                            placeholder="Từ"
                                            class="input input-bordered w-full input-sm"
                                        />
                                        <input type="text" hidden name="minPrice" value="<%= filters.minPrice %>">
                                        <input type="text" hidden name="maxPrice" value="<%= filters.maxPrice %>">
        
                                        <input
                                            id="price-to"
                                            type="text"
                                            placeholder="Đến"
                                            class="input input-bordered w-full input-sm"
                                        />
                                    </div>
                                </div>
                            </div>
