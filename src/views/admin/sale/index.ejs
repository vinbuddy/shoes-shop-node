        const modals = document.querySelectorAll('.modal');

        // Biến lưu trữ sản phẩm đã chọn
        selectedProducts = JSON.parse(localStorage.getItem('selectedProducts')) || [];

        const productList = document.getElementById("selected-product-list");

        const totalProductElement = document.getElementById("total-product");
        const subTotalElement = document.getElementById("sub-total");
        const totalPaymentElement = document.getElementById("total-payment");

        const renderProductList = () => {
            productList.innerHTML = ""; // Xóa danh sách cũ

            let totalItems = 0;
            let totalPrice = 0;

            selectedProducts.forEach((product, index) => {
                totalItems += product.quantity;
                totalPrice += product.selectedPrice * product.quantity;

                const productItem = document.createElement("li");
                productItem.className = "flex items-center gap-3 mb-3 last:mb-0";

                productItem.innerHTML = `
                    <img class="size-14 rounded-xl object-contain border" src="${product.productImage}" alt="Sản phẩm">
                    <div class="flex-1 max-w-full overflow-hidden">
                        <p class="truncate">${product.productName}</p>
                        <div class="flex items-center justify-between">
                            <p class="text-sm">
                                <span>x${product.quantity}</span>
                                &nbsp;
                                -
                                &nbsp;
                                <span>${formatVNCurrency(product.selectedPrice * product.quantity)}</span>
                            </p>
                            <!-- delete icon -->
                            <button class="btn btn-sm btn-circle btn-ghost delete-btn" data-index="${index}">
                                <i class="bx bx-trash text-red-500"></i>
                            </button>
                        </div>
                    </div>
                `;
                productList.appendChild(productItem);
            });

            // Xử lý nếu danh sách trống
            if (selectedProducts.length === 0) {
                const emptyItem = document.createElement("li");
                emptyItem.className = "flex items-center justify-center h-20";
                emptyItem.innerHTML = "Chưa có sản phẩm nào được chọn.";
                productList.appendChild(emptyItem);
            }

            // Cập nhật tổng số sản phẩm và tổng tiền
            totalProductElement.innerText = `${totalItems} sản phẩm`;
            subTotalElement.innerText = formatVNCurrency(totalPrice);
            totalPaymentElement.innerText = formatVNCurrency(totalPrice);

            // Gắn sự kiện xóa sản phẩm
            const deleteBtns = document.querySelectorAll(".delete-btn");
            deleteBtns.forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const index = Number(btn.getAttribute("data-index"));
                    selectedProducts.splice(index, 1); // Xóa sản phẩm khỏi mảng
                    localStorage.setItem("selectedProducts", JSON.stringify(selectedProducts)); // Cập nhật localStorage
                    renderProductList(); // Render lại danh sách
                });
            });
        };

        // Render danh sách sản phẩm khi trang tải
        renderProductList();

        modals.forEach((modal) => {
            const modalId = modal.getAttribute('id'); // Lấy id của modal
            const increaseBtns = modal.querySelectorAll('.increase-btn');
            const decreaseBtns = modal.querySelectorAll('.decrease-btn');
            const selectedQuantity = modal.querySelector('.quantity-select-value');
            const sizeItems = modal.querySelectorAll('.size-list button');
            const orderPrice = modal.querySelector('#order-price');
            const addToCartBtn = modal.querySelector('.add-to-cart-btn');

            
            let selectedSizeQuantity = 0;
            let selectedSizePrice = 0;
            let selectedSizeId = null;
            let selectedProductImage = null;
            let selectedProductName = null;
            let selectedSizeName = null;

            // Hàm render giá sau khi thay đổi số lượng
            const renderSizePrice = (quantity) => {
                if (orderPrice) {
                    orderPrice.innerHTML = formatVNCurrency(selectedSizePrice * quantity);
                }
            };

            // Xử lý tăng số lượng
            increaseBtns.forEach((btn) => {
                btn.addEventListener('click', () => {
                    if (selectedQuantity && selectedQuantity.innerHTML < selectedSizeQuantity) {
                        selectedQuantity.innerHTML = Number(selectedQuantity.innerHTML) + 1;
                        renderSizePrice(Number(selectedQuantity.innerHTML));
                    }
                });
            });

            // Xử lý giảm số lượng
            decreaseBtns.forEach((btn) => {
                btn.addEventListener('click', () => {
                    if (selectedQuantity && selectedQuantity.innerHTML > 1) {
                        selectedQuantity.innerHTML = Number(selectedQuantity.innerHTML) - 1;
                        renderSizePrice(Number(selectedQuantity.innerHTML));
                    }
                });
            });

            // Xử lý chọn kích cỡ
            sizeItems.forEach((item) => {
                item.addEventListener('click', () => {
                    sizeItems.forEach((btn) => btn.classList.remove('border-primary'));
                    item.classList.add('border-primary');

                    selectedSizeQuantity = Number(item.getAttribute('data-sizeQuantity'));
                    selectedSizePrice = Number(item.getAttribute('data-sizePrice'));
                    selectedSizeId = item.getAttribute('data-sizeId');
                    selectedSizeName = item.getAttribute('data-sizeName');

                    // Cập nhật giá mua ban đầu
                    renderSizePrice(Number(selectedQuantity.innerHTML));

                    // Mở khóa nút thêm vào giỏ hàng
                    if (addToCartBtn) {
                        addToCartBtn.removeAttribute('disabled');
                    }
                });
            });

            // Xử lý thêm vào giỏ hàng
            if (!addToCartBtn) return;


            addToCartBtn.addEventListener('click', () => {
                const productId = addToCartBtn.getAttribute('data-productId');
                const quantity = Number(selectedQuantity.innerHTML);
                const productImage = addToCartBtn.getAttribute('data-productImage');
                const productName = addToCartBtn.getAttribute('data-productName');

                const product = {
                    productId: productId,
                    sizeId: selectedSizeId,
                    quantity: quantity,
                    selectedPrice: selectedSizePrice,
                    productImage: productImage,
                    productName: productName,
                    sizeName: selectedSizeName,
                };

                // Kiểm tra xem sản phẩm đã tồn tại trong danh sách chưa
                const existingProductIndex = selectedProducts.findIndex(
                    (p) => p.productId === product.productId && p.sizeId === product.sizeId
                );

                if (existingProductIndex >= 0) {
                    // Nếu đã tồn tại, cập nhật số lượng
                    selectedProducts[existingProductIndex].quantity += quantity;
                } else {
                    // Nếu chưa, thêm sản phẩm vào danh sách
                    selectedProducts.push(product);
                }

                // Lưu danh sách vào localStorage
                localStorage.setItem('selectedProducts', JSON.stringify(selectedProducts));

                 // Render lại danh sách sản phẩm
                renderProductList();

                // Reset quantity về 1
                selectedQuantity.innerHTML = 1;
            });
        });
</script>

